<?xml version="1.0" encoding="utf-8" ?>
<!--This page is only for first stage's testing-->
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PlanTech.Views.RoleSelectionPage"
             Shell.NavBarIsVisible="False"
             BackgroundImageSource="loginbackground">
    <ContentPage.Content>
        <AbsoluteLayout>
            <StackLayout AbsoluteLayout.LayoutFlags="PositionProportional" AbsoluteLayout.LayoutBounds="0.5, 0.1" Orientation="Vertical">
                <Image Source="logo48" />
                <Label Text="PlanTech" FontSize="40" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
            </StackLayout>

            <Label Text="Login As" FontAttributes="Bold" FontSize="25" AbsoluteLayout.LayoutFlags="PositionProportional" AbsoluteLayout.LayoutBounds="0.5, 0.45"/>

            <Button BackgroundColor="MediumSeaGreen" AbsoluteLayout.LayoutFlags="PositionProportional,WidthProportional" AbsoluteLayout.LayoutBounds="0.5, 0.55, 0.7, -1" Text="👨‍💼 Fleet Manager" FontSize="Subtitle" Clicked="OnFleetManagerButtonClicked"/>
            <Button BackgroundColor="MediumSeaGreen" AbsoluteLayout.LayoutFlags="PositionProportional,WidthProportional" AbsoluteLayout.LayoutBounds="0.5, 0.65, 0.7, -1" Text="👨‍🌾 Farm Technician" FontSize="Subtitle" Clicked="OnFarmTechinicianButtonClicked"/> 
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>